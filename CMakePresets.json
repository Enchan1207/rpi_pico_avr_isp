{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 12,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "host",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "environment": {
                "ENV_NAME": "host"
            }
        },
        {
            "name": "target-rp2040",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "environment": {
                "PICO_SDK_PATH": "$env{HOME}/pico-sdk",
                "ENV_NAME": "rp2040"
            },
            "cacheVariables": {
                "PICO_BOARD": "pico",
                "PICO_PLATFORM": "rp2040"
            },
            "toolchainFile": "$env{PICO_SDK_PATH}/cmake/preload/toolchains/pico_arm_cortex_m0plus_gcc.cmake"
        },
        {
            "name": "target-avr",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "environment": {
                "AVR_SDK_PATH": "$env{HOME}/cmake-avr",
                "ENV_NAME": "avr"
            },
            "cacheVariables": {
                "AVR_MCU": "atmega328",
                "AVR_FCPU": "16000000"
            },
            "toolchainFile": "$env{AVR_SDK_PATH}/cmake/avr_toolchain.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "host",
            "configurePreset": "host"
        },
        {
            "name": "target-rp2040",
            "configurePreset": "target-rp2040"
        },
        {
            "name": "target-avr",
            "configurePreset": "target-avr"
        }
    ],
    "testPresets": [
        {
            "name": "host",
            "configurePreset": "host",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}